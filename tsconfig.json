{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "suppressImplicitAnyIndexErrors": true,
    //  "removeComments": false,
    //  "preserveConstEnums": false,
    "noImplicitAny": true,
    "typeRoots": [
      // "./node_modules/@types",
      "./typings"
    ]
    // "types" : ["babylonjs"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}