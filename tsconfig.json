{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "suppressImplicitAnyIndexErrors": true,
    //  "removeComments": false,
    //  "preserveConstEnums": false,
    "noImplicitAny": true,
    "typeRoots": [
      "./typings"
    //  "./node_modules/@types"
    ]
    // "types": [
    //   "babylonjs"
    // ]
  },
  "include": [
    "./ts/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}